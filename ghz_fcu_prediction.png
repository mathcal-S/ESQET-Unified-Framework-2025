# save as plot_fcu_prediction.py
import numpy as np
import matplotlib.pyplot as plt

phi = (1 + np.sqrt(5)) / 2
N = np.arange(3, 14)
alpha = 0.08
beta = 0.025

F_standard = np.exp(-alpha * N)
F_esqet = F_standard * (1 + beta * np.cos(2 * np.pi * N / phi))

plt.figure(figsize=(8, 5))
plt.plot(N, F_standard, 'k--', label='Standard Exponential Decay', linewidth=2)
plt.plot(N, F_esqet, 'r-', label='ESQET: FCU-Modulated', linewidth=2.5)
plt.scatter([5, 8], F_esqet[[2,5]], color='gold', s=100, zorder=5, edgecolors='black')
plt.axvline(5, color='gray', linestyle=':', alpha=0.7)
plt.axvline(8, color='gray', linestyle=':', alpha=0.7)
plt.xlabel('Number of Qubits $N$')
plt.ylabel('Fidelity $F(N)$')
plt.title('ESQET Prediction: FCU Resonance in GHZ Fidelity Scaling')
plt.legend()
plt.grid(True, alpha=0.3)
plt.tight_layout()
plt.savefig('ghz_fcu_prediction.png', dpi=300, bbox_inches='tight')
plt.show()

